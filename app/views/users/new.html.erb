<% provide(:title, 'Sign up') %>
<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
<h1>Sign up Form</h1>
<div class="row">
  <div class="field_with_errors"></div>
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user, local: true) do |f| %>
      <%= f.label :username %>
      <%= f.text_field :username, class: 'form-control' %> <hr />
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %> <hr />
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %><hr />
      <%= f.submit "Create"%>
    <% end %>
  </div>
</div>

